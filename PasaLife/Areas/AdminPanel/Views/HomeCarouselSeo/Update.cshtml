

@model HomeCarouselSeo

<div class="content text-center">
    <div class="col-lg-12" style="display: inline-block">
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">HomeCarousel SEO Düzəliş Et</h5>
                <a asp-action="Index" class="btn btn-secondary" style="margin-top: 5px; justify-content:end">
                    Go Back
                </a>
            </div>

            <div class="btn-group btn-group-toggle" data-toggle="buttons" style="width: 20%; margin-left: 35%">
                <label class="btn btn-secondary active language" id="0header" style=" cursor: pointer">
                    <input type="radio" name="options" id="option1" autocomplete="off" checked> Az
                </label>
                <label class="btn btn-secondary language" id="1header" style=" cursor: pointer">
                    <input type="radio" name="options" id="option2" autocomplete="off"> Ru
                </label>
                <label class="btn btn-secondary language" id="2header" style=" cursor: pointer">
                    <input type="radio" name="options" id="option3" autocomplete="off"> En
                </label>
            </div>

            <div class="card-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data" style="margin-left: 25%">

                    <div class="form-group seo-title form-group-float w-lg-50">
                        <label asp-for="@Model.AzSeoTitle">Azerbaycan dilində SEO başlıq</label>
                        <input asp-for="@Model.AzSeoTitle" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.AzSeoTitle"></span>
                    </div>
                    <div style="display:none; width: 100%" class="form-group seo-title form-group-float w-lg-50">
                        <label asp-for="@Model.RuSeoTitle">SEO заголовок на русском языке</label>
                        <input asp-for="@Model.RuSeoTitle" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.RuSeoTitle"></span>
                    </div>
                    <div style="display:none" class="form-group seo-title form-group-floa w-lg-50">
                        <label asp-for="@Model.EnSeoTitle">SEO Title in English</label>
                        <input asp-for="@Model.EnSeoTitle" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.EnSeoTitle"></span>
                    </div>


                    <button type="submit" class="btn bg-blue-800" style="margin-right: 50%">Düzəliş et<i class="icon-ml-2"></i></button>
                </form>
            </div>
        </div>
    </div>

</div>


@section Scripts{
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/js/seoTitleDesc.js"></script>
    <script src="~/vendor/jquery/jcrop.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <partial name="_AddNewInputScriptPartial">

}





