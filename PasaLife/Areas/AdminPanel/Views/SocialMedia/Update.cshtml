@model SocialMedia
<div class="content text-center">
    <div class="col-lg-5" style="display: inline-block">
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">@Model.Url - düzəliş et </h5>
                <a asp-action="Index" class="btn btn-secondary" style="margin-top: 5px; justify-content:end">
                    Go Back
                </a>
            </div>

            <div class="card-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data">


                    <div class="form-group form-group-float">
                        <label asp-for="@Model.Url"></label>
                        <input asp-for="@Model.Url" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.Url"></span>
                    </div>
                    <div class="form-group form-group-float">
                        <label asp-for="Photo" style="display: block">Icon</label>
                        <input type="file" asp-for="Photo" class="form-control" placeholder="Icon">
                        <span class="text-danger" asp-validation-for="@Model.Icon"></span>
                    </div>

                    <button type="submit" class="btn bg-blue-800">Düzəliş et<i class="icon-ml-2"></i></button>

                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}