

@model URLButton
<div class="content text-center">
    <div class="col-lg-5" style="display: inline-block">
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">URL Button Yarat</h5>
                <a asp-action="Index" class="btn btn-secondary" style="margin-top: 5px; justify-content:end">
                    Go Back
                </a>
            </div>

            <div class="card-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data">


                    <div class="form-group form-group-float">
                        <label asp-for="@Model.Name">Başlıq</label>
                        <input asp-for="@Model.Name" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    </div>                  
                    <div class="form-group form-group-float">
                        <label asp-for="@Model.URL"></label>
                        <input asp-for="@Model.URL" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.URL"></span>
                    </div>
                    <button type="submit" class="btn bg-blue-800">Yarat<i class="icon-ml-2"></i></button>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



