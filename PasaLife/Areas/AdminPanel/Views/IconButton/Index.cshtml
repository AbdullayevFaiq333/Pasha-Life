@{
    ViewData["Title"] = "Index";
    List<IconButton> iconButtons = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Şəxsi Kabinet </h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Имя</th>
                                <th>Name</th>
                                <th>Icon</th>

                                <th class="text-right pr-3">Əməliyyatlar</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in iconButtons)
                            {
                            <tr>
                                <td>
                                    @item.AzName
                                </td>
                                <td>
                                    @item.RuName
                                </td>
                                <td>
                                    @item.EnName
                                </td>
                                <td>
                                    <div class="form-group form-group-float">
                                        <img src="/style/img/@item.Icon" width="30" style="background-color: black" />
                                        <input type="hidden" name="oldPhoto" value="@item.Icon" />
                                    </div>
                                </td>
                                <td class="d-flex justify-content-end">
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success mr-2">Düzəliş et</a>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>






