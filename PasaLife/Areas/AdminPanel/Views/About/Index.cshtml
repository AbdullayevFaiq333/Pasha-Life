@{
    ViewData["Title"] = "Index";
    List<About> about = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Haqqımızda</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Имя</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th class="text-right pr-3">Əməliyyatlar</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in about)
                            {
                            <tr>
                                <td>
                                    @item.AzTitle
                                </td>
                                <td>
                                    @item.RuTitle
                                </td>
                                <td>
                                    @item.EnTitle
                                </td>
                                <td>
                                    @if (item.IsDeactive)
                                    {
                                        <span class="text-danger">Passiv</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">Aktiv </span>

                                    }
                                </td>
                                <td class="d-flex justify-content-end">
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info mr-2">Ətraflı bax</a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success mr-2">Düzəliş et</a>
                                    
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


