@{
    ViewData["Title"] = "Index";
    List<Structure> structures = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Struktur</h4>
                
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Şəkli</th>
                                
                                <th class="text-right pr-3">Əməliyyatlar</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in structures)
                            {
                                <tr>
                                    <td>
                                        <img style="width:222px;height:112px;object-fit:cover" src="~/images/@item.Image" />
                                    </td>
                                    
                                    <td class="d-flex justify-content-end">
                                        
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success mr-2">Düzəliş et</a>
                                        

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>




