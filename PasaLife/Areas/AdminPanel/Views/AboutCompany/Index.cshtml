@{
    ViewData["Title"] = "Index";
    List<AboutCompany> aboutCompanies = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Şirkət Haqqında səhifəsi</h4>
               
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Şəkil</th>
                                <th>Əsas Başlıq</th>
                                
                                <th class="text-right pr-3">Əməliyyatlar</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in aboutCompanies)
                            {
                            <tr>
                                <td>
                                    <img style="width:100px;height:100px;object-fit:cover;border-radius:50%" src="~/images/@item.Image" />
                                </td>
                                <td>
                                    @item.AzTitle
                                </td>
                                

                                <td class="d-flex justify-content-end align-items-center" style="height: 119px;">
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info mr-2">Ətraflı </a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success mr-2">Düzəliş et</a>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @*<h4 class="font-weight-bolder mt-5">3 Qutu</h4>
                <img src="~/assets/aboutCompany.PNG" style="width:100%;height:200px;object-fit:cover"/>*@
            </div>
        </div>
    </div>

</div>

