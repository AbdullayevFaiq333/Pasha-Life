@inject IViewLocalizer Localizer
@model List<Product>
@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    @if (culture == "az")
        {
                ViewData["Title"] = "Mehsullar";

        }
        else if (culture == "en")
        {
                ViewData["Title"] = "Products";
        }
        else if (culture == "ru")
        {
                ViewData["Title"] = "Продукты";
        }
    
}

<div class="page_content total_page">
    <div class="main_wrap_content">
        @if (culture == "az")
        {
            <h1>Məhsullar</h1>
        }
        else if (culture == "ru")
        {
            <h1>Продукты</h1>
        }
        else if (culture == "en")
        {
            <h1>Products</h1>
        }

    <div class="total_page_grid">
        @foreach (Product item in Model)
        {
            <div class="product_item">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="product_link">
                        <div class="product_short_desc">
                            @if (culture == "az")
                            {
                                <strong>@item.AzTitle @item.AzTitle2</strong>
                                <p>@Html.Raw(item.AzDescription)</p>
                            }
                            else if (culture == "ru")
                            {
                                <strong>@item.RuTitle @item.RuTitle2</strong>
                                <p>@Html.Raw(item.RuDescription)</p>
                            }
                            else if (culture == "en")
                            {
                                <strong>@item.EnTitle @item.EnTitle2</strong>
                                <p>@Html.Raw(item.EnDescription)</p>
                            }

                        </div>
                        <div class="product_image" style="background-image:url(images/@item.Image);"></div>
                    </a>
                </div>

