
@model AboutCompanyViewModel
@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    
    @if (culture == "az")
        {
                ViewData["Title"] = "Şirkət Haqqında";
        }
        else if (culture == "en")
        {
                ViewData["Title"] = "About The Company";
        }
        else if (culture == "ru")
        {
                ViewData["Title"] = "О Компании";
        }

}

<div class="video_modal">
    <div class="video_content_wrap">
        <div class="video_content">
            <button class="close_video_modal"></button>
            <div class="iframe_holder">
                <iframe width="100%"
                        height="100%"
                        src="@Model.AboutCompany.VideoLink"
                        title="YouTube video player"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
            </div>
        </div>
    </div>
    <button class="video_modal_bg"></button>
</div>

<div class="page_content total_page">
    <div class="static_page_header">
        @if (culture == "az")
        {
            <h2>Şirkət Haqqında</h2>

        }
        else if (culture == "en")
        {
            <h2>About the company</h2>

        }
        else if (culture == "ru")
        {
            <h2>О Компании</h2>
            
        }
        @await Component.InvokeAsync("SecondMenu")

    </div>

    <div class="white_background_content static_page_content">
        
        <div class="main_cols about_cols">
            @if (culture == "az")
            {
                <div class="col about_desc">
                    <h2>@Model.AboutCompany.AzTitle</h2>
                    <h4>
                        @Html.Raw(Model.AboutCompany.AzDescription)

                    </h4>

                </div>
            }
            else if (culture == "en")
            {
                <div class="col about_desc">
                    <h2>@Model.AboutCompany.EnTitle</h2>
                    <h4>
                        @Html.Raw(Model.AboutCompany.EnDescription)

                    </h4>

                </div>

            }
            else if (culture == "ru")
            {
                <div class="col about_desc">
                    <h2>@Model.AboutCompany.RuTitle</h2>
                    <h4>
                        @Html.Raw(Model.AboutCompany.RuDescription)

                    </h4>
                </div>
            }
            <div class="col about_video">
                <button class="about_video_self">
                    <div class="preview_image" style="background-image:url(images/@Model.AboutCompany.Image)"></div>
                    <div class="play_bttn"></div>
                </button>
            </div>
        </div>
        <div class="main_grid main_integers">
            @foreach (AboutCompanyCart item in Model.AboutCompanyCarts)
           {
               <div class="grid_item">
                    <strong>@item.Figures</strong>
                    @if (culture == "az")
                    {
                        <p>@item.AzTitle</p>

                    }
                    else if(culture == "en")
                    {
                        <p>@item.EnTitle</p>
                        
                    }
                    else if (culture == "ru")
                    {
                        <p>@item.RuTitle</p>
                        
                    }
                </div>
           }
        </div>
    </div>
        <footer>
        @await Component.InvokeAsync("Footer")
       </footer>


</div>



    <div class="page_background">
    <video muted loop class="video" autoplay playsinline>
        <source src="~/video/background.mp4" type="video/mp4" />
    </video>
</div>

<div class="assistant_wrap">
    <div class="eye"><img src="~/images/asistent.png" /></div>
    <div class="eye_animated">
        <video autoplay="autoplay" muted="muted" loop="loop" data-v-a95f347a="">
            <source src="~/video/eye.mov" type="video/mp4; codecs='hvc1'">
            <source src="~/video/eye.webm" type="video/webm">
        </video>
    </div>
</div>

